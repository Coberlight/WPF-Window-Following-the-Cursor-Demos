<Window x:Class="GiveFeedbackTest.DragDropHintBaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GiveFeedbackTest"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="DragDropHintWindow" Width="{Binding ElementName=StackPanel_Main, Path=MaxWidth}" Height="Auto" 
        Background="#77FFFFFF"
        Visibility="Visible"
        >
    <StackPanel x:Name="StackPanel_Main" MaxWidth="160">
        <Image Name="Image_Main" MaxHeight="100"></Image>
        <TextBlock Name="TextBlock_Main" Background="Transparent" TextAlignment="Center" TextWrapping="Wrap" Foreground="Blue" Padding="10,0,10,0">
                        Popup Text
        </TextBlock>
    </StackPanel>
</Window>
