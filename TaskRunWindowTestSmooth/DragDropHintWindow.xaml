<Window x:Class="GiveFeedbackTest.DragDropHintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GiveFeedbackTest"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        Title="DragDrop Hint Window" 
        Background="#77FFFFFF"
        Visibility="Visible"
        SizeToContent="WidthAndHeight"
        Topmost="True"
        >
    <!--высота stackpanel зависит от внешнего контейнера-->
    <StackPanel x:Name="StackPanel_Main" MaxWidth="300" >
        <Image Name="Image_Main" MaxHeight="100"></Image>
        <TextBlock Name="TextBlock_Main" MaxHeight="50" Background="Transparent" TextAlignment="Center" TextWrapping="Wrap" Foreground="Blue" Padding="10,0,10,0">
                        Popup Text
        </TextBlock>
    </StackPanel>
</Window>
