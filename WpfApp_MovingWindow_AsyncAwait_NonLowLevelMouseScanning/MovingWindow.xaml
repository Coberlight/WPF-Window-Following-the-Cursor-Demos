<Window x:Class="WpfApp_MovingWindow.MovingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_MovingWindow"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        IsHitTestVisible="False"
        Title="MovingWindow" Height="300" Width="300"
        Topmost="True"
        ShowInTaskbar="False"
        Background="#00FFFFFF"
        >
    <Grid>
        <Image Source="/image.png" Margin="20">
            <Image.OpacityMask>
                <ImageBrush ImageSource="/очкарик 64 64.png"/>
            </Image.OpacityMask>
        </Image>
    </Grid>
</Window>
